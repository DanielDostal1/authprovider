{
  "ConnectionStrings": {
    "Default": "Host=localhost;Port=5432;Database=authprovider;Username=postgres;Password=postgres"
  },
  "Jwt": {
    "Issuer": "authprovider",
    "Audience": "authprovider-client",
    "AccessTokenMinutes": 15,
    "PrivateKeyPem": "",
    "PublicKeyPem": ""
  },
  "Auth": {
    "AuthSchema": "auth",
    "RefreshTokenDays": 14,
    "RefreshCookieName": "refresh_token",
    "RefreshTokenHeaderName": "X-Refresh-Token",
    "ClientHeaderName": "X-Client-Type",
    "CookieSameSite": "Strict",
    "CookieSecure": true,
    "CookieHttpOnly": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
